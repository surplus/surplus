{
	"name": "@surplus/compiler",
	"version": "0.1.2",
	"description": "Surplus framework compiler WASM module",
	"author": "Josh Junon (https://github.com/qix-)",
	"repository": "surplus/surplus",
	"license": "MIT",
	"funding": "https://github.com/surplus/surplus?sponsor=1",
	"main": "node.cjs",
	"browser": "browser.mjs",
	"types": "index.d.ts",
	"files": [
		"pkg",
		"node.cjs",
		"browser.mjs",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "./build-wasm.sh",
		"prepublish": "./build-wasm.sh",
		"test": "cargo test --all-targets",
		"lint": "prettier --check . && cargo clippy --all-targets --all-features -- -D clippy::all",
		"format": "prettier --write . && cargo fmt --all"
	},
	"keywords": [
		"wasm",
		"surplus",
		"framework",
		"compiler",
		"jsx",
		"reactive"
	],
	"devDependencies": {
		"wasm-pack": "0.12.1",
		"prettier": "3.2.4"
	},
	"engines": {
		"node": ">=14.0.0"
	},
	"browserslist": [
		"Chrome >= 57",
		"Firefox >= 52",
		"Safari >= 11",
		"Edge >= 16"
	],
	"publishConfig": {
		"access": "public"
	}
}
